metadata {
  	definition (name: "WhatsApp Device", namespace: "jtmpush18", author: "jtmpush18", importUrl: "https://raw.githubusercontent.com/Hubitat/master/WhatsApp%20Child.groovy") {
    	capability "Notification"
  	}
	
	attribute "lastMessage", "string"
    attribute "htmlLastMessage", "string"
}

preferences {
    input("apiKey", "text", title: "callmebot API Key:", description: "", required: true)
    input("toPhone", "text", title: "Recipient Phone Number(es):", description: "Separate multiple numbers with a space", required: true)
    input("Message", "text", title: "Message:", description: "", required: true)
    input("debug", "bool", title: "Enable Debug Logging", required: true, defaultValue: false)
}

def installed() {
    initialize()
}

def updated() {
 	initialize()
}

def initialize() {
    state.version = version()
}

def deviceNotification(message) {
    if (settings.enableNofications == null || settings.enableNofications == true) {
        parent.sendNotification(toNumber, message, device.deviceNetworkId)
        sendEvent(name: "lastMessage", value: "${message}", descriptionText: "Sent to ${settings.toNumber}")
        createHTMLMsgEvent(message)
    } else {
        log.debug "Device ${settings.toNumber} disabled: ${message}"
    }
}

def createHTMLMsgEvent(message) {
    if (enableHTMLMessage == true) {
        sendEvent(name: "htmlLastMessage", value: "<div><h1 style='font-size:10px;'>${message}</h1></div>")
    }
}
